<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingStart="16dp"
    android:paddingTop="36dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/bg_gradient_vista"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_media_plugin"
        android:textSize="28sp"
        android:textColor="@color/primary_text"
        android:gravity="center"
        android:paddingBottom="24dp" />

    <!-- Info Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_bg"
        android:elevation="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_info_title"
            android:textSize="18sp"
            android:textColor="@color/status_title"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_info"
            android:textSize="14sp"
            android:textColor="@color/status_text"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>

    <!-- Action Button -->
    <Button
        android:id="@+id/btn_restore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:text="@string/btn_restore"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/btn_vista_style"
        android:textAllCaps="false"
        android:elevation="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

</LinearLayout>
